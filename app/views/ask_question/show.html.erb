<h1><%= @ask_question.title %></h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @ask_question.body %></p>
  </div>
  <div class="col-md-4">
    <%= link_to "Edit", edit_ask_question_path(@ask_question), class: 'btn btn-success' %>
    <%= link_to "Delete Question", @ask_question, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this question?'} %>
  </div>
</div>
