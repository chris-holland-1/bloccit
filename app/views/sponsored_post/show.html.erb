<h1><%= @sponsored_post.name %></h1>

<%= link_to "Edit Sponsored Post", edit_sponsored_post_path, class: 'btn btn-success' %>
<%= link_to "Delete Sponsored Post", @sponsored_post, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @sponsored_post.description %></p>
    <% @sponsored_post.topic.each do |post| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to post.title, sponsored_post_path(@sponsored_post, post) %>
          </h4>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= link_to "New Sponsored Post", new_sponsored_post_path(@sponsored_post), class: 'btn btn-success' %>
    <%= link_to "Delete Sponsored Post", @sponsored_post, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
  </div>
</div>
